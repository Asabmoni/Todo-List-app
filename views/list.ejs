<%- include('header'); -%>
<div class="box" id="heading">
	<h1><%= title %></h1>
</div>

<div class="box">
	<% todoItems.forEach((item)=> { %>

	<form action="/delete" method="post">
		<div class="item">
			<input name="Checkbox" value="<%=item._id%>"
 			onchange="this.form.submit()" 
			 type="checkbox" />
			 <input type="hidden" name ="listName" value = "<%= title %>">
			<p><%=item.name%></p>
		</div>
	</form>
	<%});%> 

	<form class="item" action="/" method="post">
		<input
			type="text"
			placeholder="New item"
			name="newItem"
			autocomplete="off"
			required
		/>
		<button name="list" value="<%=title%>" type="submit">+</button>
	</form>
</div>
<%- include('footer'); -%>
